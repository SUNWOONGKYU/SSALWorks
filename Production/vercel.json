{
  "version": 2,
  "name": "ssal-works",
  "buildCommand": null,
  "outputDirectory": ".",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/email/send",
      "destination": "/api/Backend_APIs/email-send"
    },
    {
      "source": "/api/email/welcome",
      "destination": "/api/Backend_APIs/email-welcome"
    },
    {
      "source": "/api/email/password-reset",
      "destination": "/api/Backend_APIs/email-password-reset"
    },
    {
      "source": "/api/subscription/status",
      "destination": "/api/Backend_APIs/subscription-status"
    },
    {
      "source": "/api/subscription/create",
      "destination": "/api/Backend_APIs/subscription-create"
    },
    {
      "source": "/api/subscription/cancel",
      "destination": "/api/Backend_APIs/subscription-cancel"
    },
    {
      "source": "/api/auth/google",
      "destination": "/api/Security/google-login"
    },
    {
      "source": "/api/auth/google/callback",
      "destination": "/api/Security/google/callback"
    },
    {
      "source": "/api/auth/logout",
      "destination": "/api/Security/logout"
    },
    {
      "source": "/api/subscription/check",
      "destination": "/api/Security/subscription/check"
    },
    {
      "source": "/api/ai/qa",
      "destination": "/api/External/ai-qa"
    },
    {
      "source": "/api/ai/usage",
      "destination": "/api/External/ai-usage"
    },
    {
      "source": "/api/ai/faq-suggest",
      "destination": "/api/External/ai-faq-suggest"
    },
    {
      "source": "/api/ai/test",
      "destination": "/api/External/ai-test"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}